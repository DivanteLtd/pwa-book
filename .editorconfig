root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4

[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 2
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 180

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_style = space
indent_size = 2
